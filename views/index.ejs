<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Param Extractor</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/style.css">
</head>

<body>
    <div class="container">
        <div class="px-4 py-5 my-5 text-center">
            <h1 class="display-5 fw-bold text-body-emphasis">URL Parameter Extractor</h1>
        </div>
    </div>

    <div class="container">

        <form method="post" action="/submit">
            <div class="mb-3">
                <input type="text" class="form-control" id="url" name="url" aria-describedby="url" placeholder="URL:"
                    required>
            </div>
            <div class="mb-3">
                <input type="text" class="form-control" id="param" name="param" aria-describedby="param"
                    placeholder="Param:" required>
            </div>
            <button class="btn btn-primary" type="submit">Extract Parameter</button>
        </form>
    </div>
    <div class="container">
        <% if (extractedParameter !=null) { %>

            <p class="text-body-secondary">Result:
            <h4 class="text-break" id="parameter">
                <%= extractedParameter %>
            </h4>
            </p>
            <button type="button" class="btn btn-primary mb-3" id="liveAlertBtn">Copy to Clipboard!</button>
            <div id="liveAlertPlaceholder"></div>
            <% } else if (extractedParameter===null) { %>
                <h5>Parameter not found.</h5>
                <% } %>
    </div>

    <div class="container">
        <footer class="py-3 my-4 border-top">
            <p class="text-center text-body-secondary">Developed by <a href="https://github.com/Pedro-Gregorio">Pedro
                    Greg√≥rio</a></p>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

    <script>
        const alertPlaceholder = document.getElementById('liveAlertPlaceholder')
        const appendAlert = (message, type) => {
            const wrapper = document.createElement('div')
            wrapper.innerHTML = [
                `<div class="alert alert-${type} alert-dismissible" role="alert">`,
                `   <div>${message}</div>`,
                '   <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>',
                '</div>'
            ].join('')

            alertPlaceholder.append(wrapper)
        }

        const alertTrigger = document.getElementById('liveAlertBtn')
        if (alertTrigger) {
            alertTrigger.addEventListener('click', () => {
                appendAlert('Copied to Clipboard!', 'success');
                let copyText = document.getElementById("parameter").innerText;
                navigator.clipboard.writeText(copyText);
            })
        }
    </script>

</body>

</html>